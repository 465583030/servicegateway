{
  "applications": {
    "identity": {
      "routing": {
        "path": "/identity",
        "type": "path"
      },
      "auth": {
        "disable": true
      },
      "backend": {
        "service": "identity"
      },
      "rate_limiting": true
    },
    "httpbin": {
      "caching": {
        "auto_flush": true,
        "enabled": true,
        "ttl": 3600
      },
      "routing": {
        "path": "/bin",
        "type": "path"
      },
      "backend": {
        "url": "http://httpbin.org"
      },
      "rate_limiting": true
    },
    "customers": {
      "rate_limiting": true,
      "caching": {
        "enabled": true,
        "ttl": 86400
      },
      "backend": {
        "service": "elwis"
      },
      "routing": {
        "type": "pattern",
        "patterns": {
          "/customers/:customernumber": "/rest/v2/customers/:customernumber",
          "/customers/:customernumber/contractpartner": "/rest/v2/customers/:customernumber/contractpartner"
        }
      }
    }
  },
  "rate_limiting": {
    "window": "15m",
    "burst": 1000
  },
  "consul": {
    "host": "consul.service.consul",
    "port": 8500,
    "datacenter": "dev"
  },
  "redis": "redis:6379",
  "http": {
    "setHeaders": {
      "Server": "Mittwald-API-Gateway/1.0"
    }
  },
  "proxy": {
    "stripHeaders": {
      "Set-Cookie": true
    }
  },
  "authentication": {
    "mode": "rest",
    "writer": {
      "mode": "header",
      "name": "X-JWT"
    },
    "provider": {
      "url": "http://identity.service.consul",
      "parameter_format": "json",
      "parameters": {
        "ttl": 86400,
        "providers": [
          "public"
        ]
      }
    },
    "verification_key": null,
    "verification_key_url": "http://identity.service.consul/key",
    "key_cache_ttl": "5m"
  }
}
