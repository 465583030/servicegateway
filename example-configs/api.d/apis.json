{
  "applications": {
  },
  "rate_limiting": {
    "window": "15m",
    "burst": 1000
  },
  "consul": {
    "host": "consul.service.consul",
    "port": 8500,
    "datacenter": "dev"
  },
  "redis": {
    "address": "redis:6379",
    "database": 0
  },
  "http": {
    "set_headers": {
      "Server": "Mittwald-API-Gateway/1.0"
    }
  },
  "proxy": {
    "strip_headers": {
      "Set-Cookie": true
    }
  },
  "authentication": {
    "mode": "rest",
    "writer": {
      "mode": "header",
      "name": "X-JWT"
    },
    "provider": {
      "url": "http://identity.service.consul",
      "parameter_format": "json",
      "parameters": {
        "ttl": 86400,
        "providers": [
          "public"
        ]
      }
    },
    "verification_key": null,
    "verification_key_url": "http://identity.service.consul/key",
    "key_cache_ttl": "5m"
  }
}
